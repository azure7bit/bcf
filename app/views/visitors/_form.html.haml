= form_for(@visitor) do |f|
  - if @visitor.errors.any?
    #error_explanation
      %h2
        = pluralize(@visitor.errors.count, "error")
        prohibited this visitor from being saved:
      %ul
        - @visitor.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :subject
    %br/
    = f.text_field :subject
  .field
    = f.label :message
    %br/
    = f.text_area :message
  .actions
    = f.submit
