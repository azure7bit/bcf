    %h2 CONTACT
    .clear
.main
  .project-wrapper
    .wrap
      .contact
        .cont.span_2_of_contact
          %h5.leave Send Us A Message
          .clear
          = form_for(@visitor) do |f|
            .contact-to.clearfix
              = f.text_field :name, class: "text", placeholder: "Name...", onfocus: "this.value = '';", onblur: "if (this.value == '') {this.value = 'Name...';}", required: true
              .clear
              = f.email_field :email, class: "text", placeholder: "Email...", onfocus: "this.value = '';", onblur: "if (this.value == '') {this.value = 'Email...';}", required: true
              .clear
              = f.text_field :subject, class: "text", placeholder: "Subject...", onfocus: "this.value = '';", onblur: "if (this.value == '') {this.value = 'Subject...';}", required: true
              .clear
              = f.text_area :message, class: "text", placeholder: "Message...", onfocus: "this.value = '';", onblur: "if (this.value == '') {this.value = 'Message...';}", required: true
              .clear
              = f.submit :register, value: "Send", class: 'submit'
        .lsidebar.span_1_of_about
          %h5.leave Contact Info
          .clear
          .contact-list
            %ul
